{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

		{% for produit in produits %}
			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm">
					<div class="card-header py-3">
						<h4 class="my-0 fw-normal">{{produit.nom}}</h4>
					</div>
					<div class="card-body">
						<h1 class="card-title pricing-card-title">$0<small class="text-muted fw-light">/mo</small>
						</h1>
						<img src="{{('@images/')~ produit.image }}" alt="Logo">
						<p>{{produit.description}}</p>
						<p>{{produit.taille}}</p>
						<p>{{produit.color}}</p>
						<p>{{produit.prix}}</p>
						<p>{{produit.qteStock}}</p>
						{% if is_granted("ROLE_USER") %}
							<a href="{{ path('panier', {'id': produit.id}) }}" class="w-100 btn btn-lg btn-outline-primary">Ajouter au panier</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
