{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
		<h1 class="display-4 fw-normal">Nos produits</h1>
	</div>
	<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

		{% for produit in produits %}
			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm">
					<div class="card-header py-3">
						<h4 class="my-0 fw-normal">{{produit.nom}}</h4>
					</div>
					<div class="card-body">
						<p class="card-title pricing-card-title card-text">{{produit.prix}}</p>
						<div class="card img-fluid" style="width:500px">
							<img class="card-img-top" src="{{('images/')~ produit.image }}" alt="image produit" style="width:100%">
							<p class="card-text">{{produit.description}}</p>
							<p class="card-text">{{produit.taille}}</p>
							<p class="card-text">{{produit.color}}</p>
							<p class="card-text">{{produit.qteStock}}</p>
							{% if is_granted("ROLE_USER") %}
								<a href="{{ path('panier', {'id': produit.id}) }}" class="w-100 btn btn-lg btn-outline-primary">Ajouter au panier</a>
							{% endif %}
						</div>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
