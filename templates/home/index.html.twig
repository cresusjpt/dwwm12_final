{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for message_success in app.flashes('success') %}
			<div class="alert alert-success" role="alert">
				{{ message_success }}
			</div>
		{% endfor %}

		<h1>Hello
			{% for user in users %}
				{{user.email}}
			{% endfor %}
			<h1>
				This friendly message is coming from:
			</div>
		{% endblock %}
