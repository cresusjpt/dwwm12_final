{% extends 'base.html.twig' %}

{% block title %}Liste des produits en panier
{% endblock %}

{% block body %}
	<section class="jumbotron text-center">
		<div class="container">
			<h1 class="jumbotron-heading">E-COMMERCE PANIER</h1>
		</div>
	</section>

	<div class="container mb-4">
		<div class="row">
			<div class="col-12">
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th scope="col"></th>
								<th scope="col">Nom produit</th>
								<th scope="col">Prix produit</th>
								<th scope="col">En Stock ?</th>
								<th scope="col" class="text-center">Quantité Commandée</th>
								<th scope="col" class="text-right">Montant</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% set total = 0 %}
							{% for produit in produits %}
								<tr>
									<td><img src="https://dummyimage.com/50x50/55595c/fff"/>
									</td>
									<td>{{produit.nom}}</td>
									<td>{{produit.prix}}</td>
									<td>
										{% if produit.QteStock >0 %}
											En Stock
										{% else %}
											Rupture
										{% endif %}
									</td>
									<td><input class="form-control" type="number" min="1" step="1" value="{{produit.QteStock}}"/></td>
									<td class="text-right">{{produit.prix * produit.QteStock}}
										€</td>
									<td class="text-right">
										<button class="btn btn-sm btn-danger">
											<i class="fa fa-trash"></i>
										</button>
									</td>
								</tr>
								{% set total = total + produit.prix * produit.QteStock %}
							{% endfor %}

							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td>
									<strong>Total</strong>
								</td>
								<td class="text-right">
									<strong>{{total}}
										€</strong>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="col mb-2">
				<div class="row">
					<div class="col-sm-12  col-md-6">
						<button class="btn btn-block btn-light">Retour aux produits</button>
					</div>
					<div class="col-sm-12 col-md-6 text-right">
						<a href="{{path('stripe')}}" class="btn btn-lg btn-block btn-success text-uppercase">Valider</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
