{% extends 'backendbase.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
	<h1>Liste des produits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Taille</th>
				<th>Color</th>
				<th>Image</th>
				<th>Prix</th>
				<th>Qte_stock</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.nom }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.taille }}</td>
					<td>{{ produit.color }}</td>
					<td>{{ produit.image }}</td>
					<td>{{ produit.prix }}</td>
					<td>{{ produit.qteStock }}</td>
					<td>
						<a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
						<a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
